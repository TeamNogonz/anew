# Google Gemini API 설정
# Google AI Studio (https://makersuite.google.com/app/apikey)에서 API 키를 발급받으세요
GOOGLE_API_KEY=your_google_api_key_here

# API 설정
# 사용 가능한 모델: gemini-1.5-flash, gemini-1.5-pro, gemini-pro
MODEL_NAME=gemini-1.5-flash
MAX_TOKENS=500
TEMPERATURE=0.7

SUMMARY_NEWS_COUNT=3

# MongoDB 설정
MONGODB_URI=mongodb://localhost:27017
# mongodb://root:rhqckd123!@mongodb:18080/admin
MONGODB_DATABASE=news_summary
MONGODB_COLLECTION=summaries